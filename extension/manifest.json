{
  "manifest_version": 3,
  "name": "NowLogBooster",
  "version": "1.0.0",
  "description": "Enhances ServiceNow syslog_list.do pages by embedding Monaco Editor for JSON logs.",
  "action": {
    "default_title": "NowLogBooster",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.service-now.com/*",
    "*://*.servicenow.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.service-now.com/*",
        "*://*.servicenow.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "monaco-page-bundle.js",
        "*.js",
        "*.ttf",
        "*.woff",
        "*.woff2",
        "monaco/**/*.js",
        "monaco/**/*.css",
        "monaco/**/*.ttf",
        "monaco/**/*.woff",
        "monaco/**/*.woff2"
      ],
      "matches": [
        "*://*.service-now.com/*",
        "*://*.servicenow.com/*"
      ]
    }
  ]
}
