{
  "manifest_version": 3,
  "name": "NowLogBooster",
  "version": "1.0.0",
  "description": "Enhances ServiceNow syslog_list.do pages with Monaco-powered JSON viewers.",
  "host_permissions": [
    "*://*.service-now.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.service-now.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "editor.html",
        "editor.js",
        "editor.css",
        "monaco-config.js",
        "monaco/**/*.js",
        "monaco/**/*.css"
      ],
      "matches": ["*://*.service-now.com/*"]
    }
  ]
}
