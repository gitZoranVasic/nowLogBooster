{
  "manifest_version": 3,
  "name": "NowLogBooster",
  "version": "1.0.0",
  "description": "Enhances ServiceNow syslog_list.do pages by embedding Monaco Editor for JSON logs.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.service-now.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.service-now.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
