{
  "manifest_version": 3,
  "name": "NowLogBooster",
  "version": "1.0.0",
  "description": "Enhances ServiceNow syslog_list.do pages by embedding Monaco Editor for JSON logs.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.service-now.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.service-now.com/syslog_list.do*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
