    "watch": "npm run build:extension && echo 'ðŸ”„ Initial build complete. Make changes to files and run npm run build:extension to rebuild.'",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "monaco-editor": "^0.53.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
